Code:

SELECT DISTINCT country, population
FROM population_years
WHERE country = 'Gabon'
ORDER BY population DESC
LIMIT 1;


SELECT DISTINCT country, population
FROM population_years
WHERE year = 2005
ORDER BY population ASC
LIMIT 10;


SELECT DISTINCT country, population
FROM population_years
WHERE year = 2010
  AND population > 100;


SELECT DISTINCT country
FROM population_years
WHERE country LIKE '%Islands%';


SELECT DISTINCT country, population
FROM population_years
WHERE year = 2000
  AND country = 'Indonesia';
  
SELECT DISTINCT country, population
FROM population_years
WHERE year = 2010
  AND country = 'Indonesia';
